<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_root_scene">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_root_grad"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/fr_temp_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:matProg_fillRadius="true"
        wheel:matProg_barColor="#C9FFF4"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/fr_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="82sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="32" />

    <TextView
        android:id="@+id/fr_temperature_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/root_temperature_celsius"
        android:textColor="#8A000000"
        android:textSize="52sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/fr_temperature"
        app:layout_constraintTop_toTopOf="@id/fr_temperature" />

    <ImageView
        android:id="@+id/fr_ac_toggle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_air_conditioner_unactive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        tools:ignore="ContentDescription" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/fr_ac_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fr_ac_toggle"
        app:np_dividerColor="#F0F6F5"
        app:np_dividerDistance="78dp"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="#26ABBD"
        app:np_selectedTextSize="26sp"
        app:np_textColor="#63817D"
        app:np_textSize="20sp"
        app:np_wrapSelectorWheel="false" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/fr_ac_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fr_ac_mode"
        app:np_accessibilityDescriptionEnabled="false"
        app:np_dividerColor="#F0F6F5"
        app:np_dividerDistance="78dp"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="#26ABBD"
        app:np_selectedTextSize="26sp"
        app:np_textColor="#63817D"
        app:np_textSize="20sp"
        app:np_wrapSelectorWheel="false" />

    <TextView
        android:id="@+id/fr_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_stroke_button"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/root_apply"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fr_ac_temperature" />

    <TextView
        android:id="@+id/fr_on_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:background="@drawable/bg_stroke_button"
        android:gravity="center"
        android:padding="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/root_ac_on"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fr_off_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fr_off_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:background="@drawable/bg_stroke_button"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/root_ac_off"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fr_on_button"
        tools:ignore="ContentDescription" />

    <by.valtorn.remoteaccontrol.utils.view.ProgressView
        android:id="@+id/fr_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

</androidx.constraintlayout.motion.widget.MotionLayout>