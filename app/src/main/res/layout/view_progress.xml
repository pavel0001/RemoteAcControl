<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FFFFFFF">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/vp_progress_wheel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:matProg_fillRadius="true"
        wheel:matProg_barColor="#C9FFF4"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/vp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_stroke_button"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/vp_progress_wheel"
        app:layout_constraintStart_toStartOf="@id/vp_progress_wheel"
        app:layout_constraintTop_toBottomOf="@id/vp_progress_wheel"
        android:text="@string/progress_setting" />

</androidx.constraintlayout.widget.ConstraintLayout>